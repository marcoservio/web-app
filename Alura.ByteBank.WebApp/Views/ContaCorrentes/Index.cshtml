@model IEnumerable<Alura.ByteBank.Aplicacao.DTO.ContaCorrenteDTO>

    @{
        ViewData["Title"] = "Contas Correntes";
    }

    <h1>Contas-Correntes</h1>

    <p>
        <a asp-action="Create">Adicionar Conta-Corrente</a>
    </p>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Identificador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Saldo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PixConta)
                </th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PixConta)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
